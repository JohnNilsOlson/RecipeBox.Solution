@{
  Layout = "_Layout";
}

@model Box.Models.Recipe
@using System.Security.Claims

<p>Hello @User.Identity.Name!</p>

<h2>@Html.DisplayFor(model => model.RecName)</h2>
<br>
@foreach (var join in Model.MealTypes)
{
  <h3>@join.MealType.Name</h3>
}
<br>
<h4>@Html.DisplayFor(model => model.RecDesc)</h4>
<br>
@foreach (var join in Model.Ingredients)
{
  <h4>Qty: @join.Ingredient.Quantity x @join.Ingredient.Name: @join.Ingredient.Prep</h4>
}

<br>
<h5>@Html.DisplayFor(model => model.RecInst)</h5>
<br>

<hr />
@Html.ActionLink("Add Ingredients", "Create", "Ingredients", new { id = Model.RecipeId })
@Html.ActionLink("Delete Recipe", "Delete", new { id = Model.RecipeId })
@Html.ActionLink("Back to Recipes", "Index")
