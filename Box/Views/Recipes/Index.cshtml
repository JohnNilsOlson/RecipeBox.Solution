@{
  Layout = "_Layout";
}

@using Box.Models;
@model List<Box.Models.Recipe>;

<h1>Recipes</h1>

@if (@Model.Count == 0)
{
  <h3>No recipes have been added yet!</h3>
}

@foreach (Recipe recipe in Model)
{
  <li>@Html.ActionLink($"{recipe.RecName}", "Details", new {id = recipe.RecipeId})</li>
}

<p>@Html.ActionLink("Add new recipe", "Create")</p>
<p>@Html.ActionLink("Back Home", "Index", "Home")</p>